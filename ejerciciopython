genero = input("Ingrese gÃ©nero (Masculino/Femenino)")
tiene_carnet = int(input("Ingrese carnet vigente (1/0)"))
if genero == 'Masculino' and tiene_carnet == 1:
    print("Debe pagar $20.000")
elif genero == 'Masculino' and tiene_carnet == 0:
    print("Debe pagar $200.000")
elif genero == 'Femenino' and tiene_carnet == 1:
    print("Debe pagar $10.000")
elif genero == 'Femenino' and tiene_carnet == 0:
    print("Debe pagar $100.000")

#SI GENERO = MASCULINO Y TIENE_CARNET_VIGENT = TRUE -> DEBE PAGAR 20.000
